<div class="container">
<h1 class="text-center">Create a new list</h1>
<%= simple_form_for(@list) do |f| %>
<%= f.input :name, label: "List name" %>
<%= f.input :photo, as: :file %>
<%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
<div class="form-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1542204165-65bf26472b9b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1548&q=80')"></div>
</div>
